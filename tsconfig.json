{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "sourceMap": true,
    "jsx": "react",
    "noImplicitAny": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}
