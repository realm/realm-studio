{
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "node",
    "module": "esnext",

    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "baseUrl": ".",

    "strict": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "downlevelIteration": true,

    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "files": [
    "src/index.d.ts",
    "src/main.ts",
    "src/renderer.tsx"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": [
      "src/**/*.{ts,tsx}"
    ]
  }
}
