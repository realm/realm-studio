{
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "node",
    "module": "esnext",
    "esModuleInterop": true,

    "jsx": "react",
    "sourceMap": true,
    "baseUrl": ".",

    "strict": true,
    // "noUnusedLocals": true,
    "noImplicitAny": true,
    "downlevelIteration": true,

    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build", "dist"]
}
