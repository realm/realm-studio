{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",

    "allowJs": true,
    "baseUrl": ".",
    "jsx": "react",
    "lib": [
      "dom",
      "es5",
      "es6"
    ],
    "noImplicitAny": true,
    "paths": {
      "realm-studio-svgs/*": ["./static/svgs/*"]
    },
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "realm-object-server-dev-server.js"
  ]
}
