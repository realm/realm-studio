{
  "name": "realm-studio",
  "productName": "Realm Studio",
  "version": "1.3.0",
  "description": "A tool for everything Realm.",
  "author": {
    "name": "Realm Inc.",
    "email": "info@realm.io",
    "url": "https://realm.io"
  },
  "repository": "https://github.com/realm/realm-studio",
  "license": "Apache-2.0",
  "main": "./build/main.bundle.js",
  "build": {
    "appId": "io.realm.realm-studio",
    "directories": {
      "buildResources": "./resources"
    },
    "files": [
      "./build/**/*",
      "./static/**/*",
      "./node_modules/**/*",
      "./package.json",
      "!node_modules/realm/android${/*}",
      "!node_modules/realm/build${/*}",
      "!node_modules/realm/react-native${/*}",
      "!node_modules/realm/scripts${/*}",
      "!node_modules/realm/src${/*}",
      "!node_modules/realm/vendor${/*}"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable",
        "zip"
      ],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "installerIcon": "resources/icon.ico"
    },
    "publish": [
      {
        "provider": "s3",
        "bucket": "static.realm.io",
        "region": "us-east-1",
        "path": "downloads/realm-studio"
      },
      {
        "provider": "github",
        "private": true
      }
    ]
  },
  "scripts": {
    "build": "webpack --env.NODE_ENV=production",
    "check:package-lock": "node ./scripts/check-package-lock.js",
    "dev:ros": "ros start",
    "dev": "rm -rf ./build && concurrently --names \"WEBPACK:M,WEBPACK:R,ELECTRON\" \"npm run webpack:main\" \"npm run webpack:renderer\" \"npm run wait-for-bundle && electron .\"",
    "prepackage": "rm -rf ./build && npm run build",
    "package": "electron-builder --publish=never",
    "lint:sass": "sass-lint -c .sass-lint.yml 'src/**/*.scss' -v",
    "lint:ts": "tslint --project tsconfig.json 'src/**/*.ts' 'src/**/*.tsx'",
    "lint": "npm run lint:ts && npm run lint:sass && echo 'Everything looks good!'",
    "postinstall": "electron-builder install-app-deps",
    "precommit": "lint-staged",
    "prepare-next-release": "node ./scripts/prepare-next-release.js",
    "prestart": "rm -rf ./build && npm run build",
    "start": "electron .",
    "test": "mocha-webpack",
    "test:ci": "mocha-webpack --reporter mocha-junit-reporter",
    "tslint-prettier": "tslint --fix 'src/**/*.ts' 'src/**/*.tsx'",
    "wait-for-bundle": "node ./webpack.wait-for-bundle.js",
    "webpack:main": "webpack --config=webpack.main.config.js",
    "webpack:renderer": "webpack-dev-server --config=webpack.renderer.config.js"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix"
    ],
    "package.json": [
      "check:package-lock"
    ]
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "electron-updater": "^2.13.0",
    "faker": "^4.1.0",
    "font-awesome": "^4.7.0",
    "fs-extra": "^4.0.2",
    "lodash": "^4.17.4",
    "mixpanel-browser": "^2.13.0",
    "moment": "^2.19.1",
    "react": "^15.6.2",
    "react-addons-css-transition-group": "^15.6.2",
    "react-addons-transition-group": "^15.6.2",
    "react-draggable": "^3.0.3",
    "react-sortable-hoc": "^0.6.8",
    "react-virtualized": "^9.11.1",
    "reactstrap": "^4.8.0",
    "realm": "2.0.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.3",
    "@types/faker": "^4.1.1",
    "@types/fs-extra": "^4.0.2",
    "@types/jsdom": "^11.0.2",
    "@types/mixpanel": "^2.13.0",
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.46",
    "@types/react": "^15.6.1",
    "@types/react-dom": "^15.5.6",
    "@types/react-sortable-hoc": "^0.6.0",
    "@types/react-virtualized": "^9.7.6",
    "@types/reactstrap": "^4.6.4",
    "@types/source-map-support": "^0.4.0",
    "@types/uuid": "^3.4.2",
    "@types/webdriverio": "^4.8.6",
    "@types/webpack": "^3.0.13",
    "@types/webpack-env": "^1.13.2",
    "awesome-typescript-loader": "^3.2.3",
    "bootstrap": "4.0.0-alpha.6",
    "concurrently": "^3.5.0",
    "css-loader": "^0.28.4",
    "devtron": "^1.4.0",
    "electron": "^1.8.1",
    "electron-builder": "^19.37.2",
    "electron-publisher-s3": "^19.37.0",
    "file-loader": "^1.1.5",
    "husky": "^0.14.3",
    "jsdom": "^11.3.0",
    "lint-staged": "^4.3.0",
    "mocha": "^3.5.3",
    "mocha-junit-reporter": "^1.15.0",
    "mocha-webpack": "^1.0.0-rc.1",
    "node-sass": "^4.5.3",
    "null-loader": "^0.1.1",
    "prettier": "^1.7.4",
    "react-dom": "^15.6.2",
    "react-hot-loader": "^3.1.1",
    "realm-object-server": "2.0.6",
    "resolve-url-loader": "^2.1.1",
    "sass-lint": "^1.12.1",
    "sass-loader": "^6.0.6",
    "semver": "^5.4.1",
    "simple-git": "^1.80.1",
    "source-map-support": "^0.5.0",
    "spectron": "^3.7.2",
    "style-loader": "^0.19.0",
    "svg-sprite-loader": "^3.3.1",
    "tslint": "^5.6.0",
    "tslint-config-prettier": "^1.5.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-plugin-prettier": "^1.2.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.5.3",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.0",
    "webpack-dev-server": "^2.9.2",
    "webpack-node-externals": "^1.6.0",
    "webpack-visualizer-plugin": "^0.1.11",
    "xvfb-maybe": "^0.2.1"
  },
  "engines": {
    "node": "^8"
  }
}
