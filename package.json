{
  "name": "realm-studio",
  "version": "0.0.1-alpha.2",
  "description": "A tool for everything Realm.",
  "author": "Realm Inc.",
  "repository": "https://github.com/realm/realm-studio",
  "license": "Apache-2.0",
  "main": "./build/main.js",
  "build": {
    "productName": "Realm Studio",
    "appId": "io.realm.realm-studio",
    "directories": {
      "buildResources": "./resources"
    },
    "files": [
      "./build/**/*",
      "./static/**/*",
      "./node_modules/**/*",
      "./package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "publish": {
      "provider": "github",
      "private": true
    }
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "lint": "tslint --project tsconfig.json --type-check --force",
    "build": "NODE_ENV=production webpack",
    "electron": "electron ./build/main.bundle.js",
    "dev": "NODE_ENV=develop concurrently --names \"WEBPACK:M,WEBPACK:R,ELECTRON\" \"npm run webpack:main -- --watch\" \"npm run webpack:renderer\" \"npm run electron\"",
    "dist": "electron-builder --dir",
    "webpack:main": "webpack --config=webpack.main.config.js",
    "webpack:renderer": "webpack-dev-server --config=webpack.renderer.config.js"
  },
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-draggable": "^2.2.6",
    "react-virtualized": "^9.9.0",
    "realm": "^1.10.0"
  },
  "devDependencies": {
    "@types/node": "^8.0.8",
    "@types/react": "^15.0.34",
    "@types/react-dom": "^15.5.1",
    "@types/react-virtualized": "^9.7.3",
    "@types/webpack-env": "^1.13.0",
    "awesome-typescript-loader": "^3.2.3",
    "concurrently": "^3.5.0",
    "css-loader": "^0.28.4",
    "electron": "^1.7.5",
    "electron-builder": "^19.22.1",
    "file-loader": "^0.11.2",
    "lodash": "^4.17.4",
    "node-sass": "^4.5.3",
    "null-loader": "^0.1.1",
    "sass-loader": "^6.0.6",
    "source-map-support": "^0.4.15",
    "style-loader": "^0.18.2",
    "tslint": "^5.6.0",
    "typescript": "^2.4.2",
    "webpack": "^3.5.4",
    "webpack-dev-server": "^2.7.1",
    "webpack-node-externals": "^1.6.0"
  }
}
