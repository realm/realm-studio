{
  "name": "realm-studio",
  "productName": "Realm Studio",
  "version": "1.0.0-rc.1",
  "description": "A tool for everything Realm.",
  "author": {
    "name": "Realm Inc.",
    "email": "info@realm.io",
    "url": "https://realm.io"
  },
  "repository": "https://github.com/realm/realm-studio",
  "license": "Apache-2.0",
  "main": "./build/main.bundle.js",
  "build": {
    "appId": "io.realm.realm-studio",
    "directories": {
      "buildResources": "./resources"
    },
    "files": [
      "./build/**/*",
      "./static/**/*",
      "./node_modules/**/*",
      "./package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "zip"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "tar.gz"
      ],
      "files": [
        "!node_modules/realm/android${/*}",
        "!node_modules/realm/build${/*}",
        "!node_modules/realm/react-native${/*}",
        "!node_modules/realm/scripts${/*}",
        "!node_modules/realm/src${/*}",
        "!node_modules/realm/vendor${/*}"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip",
        "portable"
      ],
      "files": [
        "!node_modules/realm/android${/*}",
        "!node_modules/realm/build${/*}",
        "!node_modules/realm/react-native${/*}",
        "!node_modules/realm/scripts${/*}",
        "!node_modules/realm/src${/*}",
        "!node_modules/realm/vendor${/*}"
      ],
      "icon": "static/icons/win/realm-studio.ico",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "installerIcon": "static/icons/win/realm-studio.ico"
    },
    "publish": [
      {
        "provider": "s3",
        "bucket": "static.realm.io",
        "region": "us-east-1",
        "path": "downloads/realm-studio"
      },
      {
        "provider": "github",
        "private": true
      }
    ]
  },
  "scripts": {
    "build": "webpack --env.NODE_ENV=production",
    "check:package-lock": "node ./checking/package-lock.js",
    "dev:ros": "ros start",
    "dev": "rm -rf ./build && concurrently --names \"WEBPACK:M,WEBPACK:R,ELECTRON\" \"npm run webpack:main\" \"npm run webpack:renderer\" \"npm run wait-for-bundle && npm run electron\"",
    "pack": "rm -rf ./build ./dist && npm run build && npm run electron:pack",
    "dist": "rm -rf ./build ./dist && npm run build && npm run electron:dist",
    "electron:pack": "electron-builder --dir",
    "electron:dist": "electron-builder",
    "electron": "electron .",
    "lint:sass": "sass-lint -c .sass-lint.yml 'src/**/*.scss' -v",
    "lint:ts": "tslint --project tsconfig.json --type-check 'src/**/*.ts' 'src/**/*.tsx'",
    "lint": "npm run lint:ts && npm run lint:sass && echo 'Everything looks good!'",
    "postinstall": "electron-builder install-app-deps",
    "precommit": "lint-staged",
    "start": "rm -rf ./build && npm run build && npm run electron",
    "test": "mocha-webpack --webpack-config webpack.test.config.js 'src/**/*.test.ts' 'src/**/*.test.tsx'",
    "tslint-prettier": "tslint --fix 'src/**/*.ts' 'src/**/*.tsx'",
    "wait-for-bundle": "node ./webpack.wait-for-bundle.js",
    "webpack:main": "webpack --config=webpack.main.config.js",
    "webpack:renderer": "webpack-dev-server --config=webpack.renderer.config.js"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix"
    ],
    "package.json": [
      "check:package-lock"
    ]
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "electron-updater": "^2.10.1",
    "faker": "^4.1.0",
    "font-awesome": "^4.7.0",
    "fs-extra": "^4.0.2",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "react": "^15.6.2",
    "react-addons-css-transition-group": "^15.6.2",
    "react-addons-transition-group": "^15.6.2",
    "react-dom": "^15.6.2",
    "react-draggable": "^3.0.3",
    "react-virtualized": "^9.9.0",
    "reactstrap": "^4.8.0",
    "realm": "2.0.0-rc16",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.3",
    "@types/faker": "^4.1.1",
    "@types/fs-extra": "^4.0.2",
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.32",
    "@types/react": "^15.6.1",
    "@types/react-dom": "^15.5.6",
    "@types/react-virtualized": "^9.7.3",
    "@types/reactstrap": "^4.6.1",
    "@types/source-map-support": "^0.4.0",
    "@types/uuid": "^3.4.2",
    "@types/webdriverio": "^4.8.6",
    "@types/webpack": "^3.0.13",
    "@types/webpack-env": "^1.13.0",
    "awesome-typescript-loader": "^3.2.3",
    "bootstrap": "4.0.0-alpha.6",
    "concurrently": "^3.5.0",
    "css-loader": "^0.28.4",
    "devtron": "^1.4.0",
    "electron": "^1.8.1",
    "electron-builder": "^19.34.1",
    "electron-publisher-s3": "^19.34.0",
    "file-loader": "^0.11.2",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.3",
    "mocha": "^3.5.3",
    "mocha-webpack": "^1.0.0-rc.1",
    "node-sass": "^4.5.3",
    "null-loader": "^0.1.1",
    "prettier": "^1.7.4",
    "react-hot-loader": "^3.0.0-beta.7",
    "realm-object-server": "2.0.0-alpha.42",
    "resolve-url-loader": "^2.1.0",
    "sass-lint": "^1.12.0",
    "sass-loader": "^6.0.6",
    "semver": "^5.4.1",
    "source-map-support": "^0.4.15",
    "spectron": "^3.7.2",
    "style-loader": "^0.18.2",
    "svg-sprite-loader": "^3.2.6",
    "tslint": "^5.6.0",
    "tslint-config-prettier": "^1.5.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-plugin-prettier": "^1.2.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.5.3",
    "url-loader": "^0.5.9",
    "webpack": "^3.5.4",
    "webpack-dev-server": "^2.9.1",
    "webpack-node-externals": "^1.6.0",
    "xvfb-maybe": "^0.2.1"
  },
  "false": {},
  "engines": {
    "node": "^8"
  }
}
