{
  "name": "realm-studio",
  "version": "0.0.1-alpha.9",
  "description": "A tool for everything Realm.",
  "author": "Realm Inc.",
  "repository": "https://github.com/realm/realm-studio",
  "license": "Apache-2.0",
  "main": "./build/main.bundle.js",
  "build": {
    "productName": "Realm Studio",
    "appId": "io.realm.realm-studio",
    "directories": {
      "buildResources": "./resources"
    },
    "files": [
      "./build/**/*",
      "./static/**/*",
      "./node_modules/**/*",
      "./package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "zip"
    },
    "publish": [
      {
        "provider": "s3",
        "bucket": "static.realm.io",
        "region": "us-east-1",
        "path": "downloads/realm-studio"
      },
      {
        "provider": "github",
        "private": true
      }
    ]
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "lint": "npm run lint:ts && npm run lint:sass && echo 'Everything looks good!'",
    "lint:ts": "tslint --project tsconfig.json --type-check 'src/**/*.ts' 'src/**/*.tsx'",
    "lint:sass": "sass-lint -c .sass-lint.yml 'src/**/*.scss' -v",
    "build": "NODE_ENV=production webpack",
    "electron": "electron ./build/main.bundle.js",
    "dev": "rm -rf ./build && NODE_ENV=develop concurrently --names \"WEBPACK:M,WEBPACK:R,ELECTRON\" \"npm run webpack:main\" \"npm run webpack:renderer\" \"npm run wait-for-bundle && npm run electron\"",
    "dev:ros": "ros start",
    "pack": "rm -rf ./build ./dist && npm run build && npm run electron:pack",
    "dist": "rm -rf ./build ./dist && npm run build && npm run electron:dist",
    "electron:pack": "electron-builder --dir",
    "electron:dist": "electron-builder",
    "wait-for-bundle": "node ./webpack.wait-for-bundle.js",
    "webpack:main": "webpack --config=webpack.main.config.js",
    "webpack:renderer": "webpack-dev-server --config=webpack.renderer.config.js"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "faker": "^4.1.0",
    "font-awesome": "^4.7.0",
    "moment": "^2.18.1",
    "electron-publisher-s3": "^19.21.0",
    "electron-updater": "^2.8.7",
    "react": "^15.6.1",
    "react-addons-css-transition-group": "^15.6.0",
    "react-addons-transition-group": "^15.6.0",
    "react-dom": "^15.6.1",
    "react-draggable": "^3.0.3",
    "react-virtualized": "^9.9.0",
    "lodash": "^4.17.4",
    "reactstrap": "^4.8.0",
    "realm": "^2.0.0-rc9"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.3",
    "@types/faker": "^4.1.1",
    "@types/node": "^8.0.8",
    "@types/react": "^15.0.34",
    "@types/react-dom": "^15.5.1",
    "@types/react-virtualized": "^9.7.3",
    "@types/reactstrap": "^4.3.13",
    "@types/source-map-support": "^0.4.0",
    "@types/webpack-env": "^1.13.0",
    "awesome-typescript-loader": "^3.2.3",
    "bootstrap": "4.0.0-alpha.6",
    "concurrently": "^3.5.0",
    "css-loader": "^0.28.4",
    "devtron": "^1.4.0",
    "electron": "^1.7.5",
    "electron-builder": "^19.22.1",
    "file-loader": "^0.11.2",
    "node-sass": "^4.5.3",
    "null-loader": "^0.1.1",
    "react-hot-loader": "^3.0.0-beta.7",
    "realm-object-server": "^2.0.0-alpha.35",
    "resolve-url-loader": "^2.1.0",
    "sass-lint": "^1.10.2",
    "sass-loader": "^6.0.6",
    "source-map-support": "^0.4.15",
    "style-loader": "^0.18.2",
    "svg-sprite-loader": "^3.2.5",
    "tslint": "^5.6.0",
    "typescript": "^2.4.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.5.4",
    "webpack-dev-server": "^2.7.1",
    "webpack-node-externals": "^1.6.0"
  },
  "false": {}
}
